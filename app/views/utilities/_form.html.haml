= simple_form_for(@utility, :html => { :class => 'form-horizontal' }) do |f|
  = f.error_notification
  = f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id }
  = f.input :name, label: "Provider", collection: [ "NStar", "National Grid", "Comcast"]
  .service-label Name
  .service-field= current_user.name
  .service-label Address
  .service-field= current_user.address
  = current_user.city
  - if !current_user.city.blank?
    ,
  = current_user.state
  = current_user.zip
  = f.input :account_number
  .service-label Email
  .service-field= current_user.email
  .service-label Payment Method
  // this is a dummy field!
  = select_tag :payment_type, options_for_select([["#{current_user.payment_type} ending in #{current_user.cc_number.last(4)}", "#{current_user.payment_type}"]]), class: "select optional form-control"
  .service-field.row
    .col-md-6
      Payment type: 
    .col-md-6
      = current_user.payment_type
  .service-field.row
    .col-md-6
      Cardholder's Name: 
    .col-md-6
      = current_user.carholders_name
  .service-field.row
    .col-md-6
      Card Number: 
    .col-md-6
      xxxx-xxxx-xxxx-
      = current_user.cc_number.last(4)
  .service-field.row
    .col-md-6
      Exp. Date: 
    .col-md-6
      = current_user.experation_date.strftime('%m/%Y')
  %br
  = f.submit class: "btn btn-primary"
= link_to 'Back', utilities_path, class: "btn btn-default btn-sm margin-top-20"