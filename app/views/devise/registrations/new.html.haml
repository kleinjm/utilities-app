#home.row.center-text.padding-top-60
  %h1 Utilitizer
  .row.fadded-bg
    .col-md-2.col-md-offset-5.slightly-larger
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal' }) do |f|
        = devise_error_messages!
        = f.input :email, autofocus: true
        = f.input :password, autocomplete: "off", hint: "Must contain at least 8 characters"
        = f.label :password_confirmation, "Password Confirmation", class: "center-text"
        = f.input :password_confirmation, autocomplete: "off", label: false
        = f.submit "Sign Up", class: "btn btn-primary btn-lg"
      = link_to "Sign In", new_session_path(resource_name), class: "btn btn-default margin-top-20 margin-bottom-20"